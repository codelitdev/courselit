{
    "extends": "tsconfig/react-library.json",
    "exclude": ["dist", "build", "node_modules"],
    "compilerOptions": {
        "outDir": "./dist",
        "lib": ["dom", "es2015"],
        "strict": true,
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es2015",
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
